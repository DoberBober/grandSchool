.footer
	margin-top 80px
	padding 80px 0 86px
	background grey

.footer__container
	display grid
	grid-template-columns 376px 276px 376px 376px
	justify-content space-between

.footer__heading
	margin 0 0 26px
	font-weight 500
	font-size 24px
	line-height 32px

.footer__contactsLink
	color primary
	text-decoration none
	display inline-flex
	align-items center
	font-weight 500
	font-size 24px
	line-height 32px

	svg
		margin-right 8px

	& ~ &
		margin-top 26px

.footer__contactsLinkNote
	margin-top 8px
	font-weight 400
	font-size 18px
	line-height 28px

.footer__socials
	margin 58px 0 0

.footer__officeAddress
	font-weight 400
	font-size 18px
	line-height 28px

.footer__officeBtn
	display table
	margin-top 26px

.footer__links
	margin 0
	padding 0
	list-style none

.footer__linksItem
	& + &
		margin-top 24px

.footer__linksLink
	font-weight 600
	font-size 18px
	line-height 28px
	text-decoration none
	display inline-flex
	align-items center
	color primary

	svg
		margin-left 7px
