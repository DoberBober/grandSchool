mixin teamPerson(modificator, extraClasses, name, post, email, phone, phoneCode)
	- classList = 'teamPerson'

	if modificator
		each mod in modificator
			- classList = classList + ' teamPerson--' + mod

	if extraClasses
		- classList = classList + ' ' + extraClasses

	div(class=classList)
		img(src="https://via.placeholder.com/160x160", alt=name).teamPerson__photo
		h3.teamPerson__name #{name}
		.teamPerson__post #{post}

		.teamPerson__contacts 
			if email
				a(href=`mailto:${email}`).teamPerson__contact
					<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M18 7.373V14.5C18 15.8807 16.8807 17 15.5 17H4.5C3.11929 17 1.99992 15.8807 1.99992 14.5V7.373L9.74649 11.931C9.90297 12.023 10.097 12.023 10.2535 11.931L18 7.373ZM15.5 4C16.7871 4 17.847 4.9726 17.9848 6.22293L10 10.9199L2.01518 6.22293C2.15304 4.9726 3.21294 4 4.5 4H15.5Z" fill="currentColor"/>
					</svg>
					| #{email}
			else 
				.teamPerson__contact
					<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M18 7.373V14.5C18 15.8807 16.8807 17 15.5 17H4.5C3.11929 17 1.99992 15.8807 1.99992 14.5V7.373L9.74649 11.931C9.90297 12.023 10.097 12.023 10.2535 11.931L18 7.373ZM15.5 4C16.7871 4 17.847 4.9726 17.9848 6.22293L10 10.9199L2.01518 6.22293C2.15304 4.9726 3.21294 4 4.5 4H15.5Z" fill="currentColor"/>
					</svg>
					| ...

			if phone
				a(href=`tel:${phone}`).teamPerson__contact
					<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M16.9774 13.5817L16.3417 16.3378C16.2524 16.7274 15.91 17 15.5089 17C8.61065 16.9995 3 11.3888 3 4.49032C3 4.08948 3.27258 3.74661 3.66223 3.65774L6.41834 3.02203C6.81973 2.92902 7.22986 3.13736 7.39665 3.51748L8.66862 6.48413C8.81731 6.83356 8.71702 7.24069 8.42309 7.48075L6.95097 8.66277C7.88007 10.5554 9.41889 12.0942 11.3121 13.0239L12.5173 11.5529C12.7549 11.2581 13.1651 11.1561 13.5145 11.3075L16.4812 12.5791C16.838 12.7669 17.0704 13.1825 16.9774 13.5817Z" fill="currentColor"/>
					</svg>
					| #{phone}
					if phoneCode 
						b #{phoneCode}
